<div class="col-md-10 col-centered">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3>
          同城帮帮忙活动区
          <div class="pull-right">
            <%= link_to("New group", new_groupone_path, class: "btn btn-danger") %>
          </div>
        </h3>
      </div>
      <div class="panel-body">
        <table class="table table-boldered">
          <thead>
            <tr>
            <td>Title</td>
            <td>Description</td>
             <td>Creator </td>
            </tr>
          </thead>
          <tbody>
          <tbody>
            <% @groupones.each do |groupone| %>
              <tr>
                <td><%= link_to(groupone.title, groupone_path(groupone)) %></td>
                <td><%= groupone.description %></td>
                <td> <%= groupone.user.email %> </td>
                <td>
                <% if current_user && current_user == groupone.user %>
                  <%= link_to("Edit", edit_groupone_path(groupone), class: "btn btn-xs btn-default")%>
                  <%= link_to("Delete", groupone_path(groupone),    class: "btn btn-xs btn-default",
                              method: :delete, data: { confirm: "Are you sure?" } )%>
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
