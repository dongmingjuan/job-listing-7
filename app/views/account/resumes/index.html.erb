
<div class="col-md-12">

  <h2 class="text-center"> 我发表过的文章 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td> <%= resume.content %> </td>
          <td> <%= resume.job.title %> </td>
          <td> <%= resume.updated_at %> </td>
          <td> <%= link_to('Edit', edit_job_resume_path(resume.job, resume), class: "btn btn-default btn-xs") %></td>
          <td> <%= link_to('Delete', job_resume_path(resume.job, resume), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
