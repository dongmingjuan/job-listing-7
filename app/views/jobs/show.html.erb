<span class="pull-right">
  <% if current_user && current_user.is_member_of?(@job) %>
    <label class="label label-success"> 群组成员 </label>
    <%= link_to("Quit Group", quit_job_path(@job), method: :post, class: "btn btn-default")%>
  <% else %>
    <label class="label label-warning"> 不是群组成员 </label>
    <%= link_to("Join Group", join_job_path(@job), method: :post, class: "btn btn-default")%>
  <% end %>
</span>

<div class="pull-right">
  <% if current_user && current_user.is_member_of?(@job) %>
   <%= link_to("Write a post", new_job_resume_path(@job), class: "btn btn-default ") %>
  <% end %>
</div>


  <h1> <%= @job.title %></h1>

  <p>
    <%= simple_format(@job.description) %>
  </p>

  <div class="text-center">
    <%= will_paginate @resumes %>
  </div>






  <table class="table">
    <thead>
     <tr>
        <th>文章内容</th>
        <th>图片</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= resume.content %></td>
          <td><%= link_to("See the Image", resume.attachment_url)%></td>
          <td><%= resume.user.email %></td>
          <td><%= resume.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
